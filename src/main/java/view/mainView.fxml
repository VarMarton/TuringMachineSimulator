<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" stylesheets="@mainView.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <top>
        <AnchorPane fx:id="menuBar" styleClass="section" BorderPane.alignment="CENTER_LEFT">
            <Button layoutX="3.0" layoutY="3.0" text="_Export"/>
            <Button layoutX="76.0" layoutY="3.0" text="_Import"/>
            <Button fx:id="helpButton" layoutX="149.0" layoutY="3.0" text="_Help"/>
        </AnchorPane>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <GridPane.margin>
                    <Insets bottom="5.0" top="5.0"/>
                </GridPane.margin>
                <BorderPane styleClass="section">
                    <GridPane.margin>
                        <Insets right="1.0"/>
                    </GridPane.margin>
                    <top>
                        <Label alignment="CENTER" text="Info" BorderPane.alignment="CENTER"/>
                    </top>
                    <center>
                        <TextArea fx:id="infoTextArea" editable="false" text="Test string" wrapText="true" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0"/>
                            </BorderPane.margin>
                        </TextArea>
                    </center>
                </BorderPane>
                <BorderPane styleClass="section" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="1.0" right="1.0"/>
                    </GridPane.margin>
                    <top>
                        <Label alignment="CENTER" text="Settings" BorderPane.alignment="CENTER"/>
                    </top>
                    <center>
                        <GridPane BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="149" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <GridPane fx:id="stateSettingContainer" GridPane.vgrow="SOMETIMES">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="46.0" prefHeight="46.0" vgrow="never"/>
                                    <RowConstraints minHeight="46.0" prefHeight="46.0" vgrow="never"/>
                                    <RowConstraints minHeight="46.0" prefHeight="46.0" vgrow="never"/>
                                </rowConstraints>
                                <GridPane.margin>
                                    <Insets left="10.0" right="10.0"/>
                                </GridPane.margin>
                                <Label text="States"/>
                                <Label text="Start state" GridPane.rowIndex="1"/>
                                <Label text="End states" GridPane.rowIndex="2"/>
                                <TextField fx:id="statesInput" GridPane.columnIndex="1"/>
                                <TextField fx:id="startStateInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="endStatesInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </GridPane>
                            <ScrollPane fitToWidth="true" GridPane.rowIndex="1">
                                <GridPane fx:id="tapesSettingContainer" styleClass="tapeContainers">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                    </columnConstraints>
                                </GridPane>
                            </ScrollPane>
                        </GridPane>
                    </center>
                    <bottom>
                        <AnchorPane >
                            <Button fx:id="newTapeBtn" text="New _tape"/>
                            <Button fx:id="deleteTapeBtn" layoutX="97.0" text="_Delete tape" disable="true"/>
                            <BorderPane.margin>
                                <Insets bottom="10.0" left="10.0" top="10.0"/>
                            </BorderPane.margin>
                        </AnchorPane>
                    </bottom>
                </BorderPane>
                <BorderPane styleClass="section" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets left="1.0"/>
                    </GridPane.margin>
                    <top>
                        <Label alignment="CENTER" text="Rules" BorderPane.alignment="CENTER"/>
                    </top>
                    <center>
                        <TextArea fx:id="ruleInputTextArea" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="5.0" left="10.0" right="10.0"/>
                            </BorderPane.margin>
                        </TextArea>
                    </center>
                    <bottom>
                        <GridPane BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <BorderPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0"/>
                            </BorderPane.margin>
                            <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                <Button styleClass="rulesControlBtns" text="_New"/>
                                <Button layoutX="76.0" styleClass="rulesControlBtns" text="_Check"/>
                            </AnchorPane>
                            <Button text="_Initialise" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                        </GridPane>
                    </bottom>
                </BorderPane>
            </GridPane>
            <GridPane styleClass="section" GridPane.rowIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <BorderPane GridPane.valignment="TOP">
                    <center>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                    </center>
                    <bottom>
                        <AnchorPane fx:id="runtimeControlPanel" maxHeight="51.0" maxWidth="250.0" BorderPane.alignment="CENTER">
                            <Button fx:id="restartRuntimeControlBtn" layoutX="20.0" layoutY="3.0" styleClass="runtimeControlBtn">
                                <graphic>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@icons/restart.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="prevStepRuntimeControlBtn" layoutX="75.0" layoutY="3.0" styleClass="runtimeControlBtn">
                                <graphic>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@icons/prevStep.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="nextStepRuntimeControlBtn" layoutX="130.0" layoutY="3.0" styleClass="runtimeControlBtn">
                                <graphic>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@icons/nextStep.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="finishRuntimeControlBtn" layoutX="185.0" layoutY="3.0" styleClass="runtimeControlBtn">
                                <graphic>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@icons/finish.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <BorderPane.margin>
                                <Insets bottom="3.0"/>
                            </BorderPane.margin>
                        </AnchorPane>
                    </bottom>
                </BorderPane>
            </GridPane>
        </GridPane>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
